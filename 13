// primeiro código em Java
public class PrimeiroCodigo {

  public static void main(String[] args) {
    System.out.println("Hello world!");
  }
}
  


// criando variávies de tipos diferentes
public class CriandoVariaveis {
    public static void main(String[] args) {
        int x = 12;
        float y = 15.4f;
        double z = 23.589d;

        System.out.println(x);
        System.out.println(y);
        System.out.println(z);
    }
}



// uso de operador de comparação
public class UsoDeComparacao {
    public static void main(String[] args) {
        int x = 10;
        int y = 10;
        System.out.println(x == y);

        y = 12;
        System.out.println(x == y);
    }
}



// uso de if e else 
class UsoDeCondicional {

  public static void main(String[] args) {
    int x = 20;
    int y = 22;

    if (x > y) {
      System.out.println("O valor de X é maior do que o valor de Y");
    } else {
      System.out.println("O valor de Y é maior do que o valor de X");
    }
  }
}
